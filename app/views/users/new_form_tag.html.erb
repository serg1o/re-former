<h1>This is the new user view</h1>

<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "username: ") %><%= text_field_tag(:username) %><br>
  <%= label_tag(:email, "email: ") %><%= email_field_tag(:email) %><br>
  <%= label_tag(:password, "password: ") %><%= password_field_tag(:password) %>
  <%= submit_tag("Submit") %>
<% end %> 
